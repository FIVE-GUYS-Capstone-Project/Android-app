<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome,"
            android:textColor="#0E4174"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shipperText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHIPPER"
            android:textColor="#0E4174"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Center area for Bluetooth and pulses -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <!-- Ripple views -->
        <View
            android:id="@+id/pulse1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/pulse_circle"
            android:visibility="gone" />

        <View
            android:id="@+id/pulse2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/pulse_circle"
            android:visibility="gone" />

        <View
            android:id="@+id/pulse3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/pulse_circle"
            android:visibility="gone" />

        <!-- Bluetooth Circle Button -->
        <FrameLayout
            android:id="@+id/bluetoothCircle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/bluetoothIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_bluetooth_white_foreground"
                app:tint="#7DA1C4" />
        </FrameLayout>
    </FrameLayout>

    <!-- Bottom Status -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_bottom_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/bluetoothStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Your Bluetooth is off. Please turn on\nBluetooth to continue your next steps."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
